@model Domain.Models.File

<form action="/Poll/Create" method="post" class="container mt-4" enctype="multipart/form-data">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3 row">
        <label for="Filename" class="col-sm-2 col-form-label">Filename</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Filename" name="Filename">
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Filename)</span>
        </div>
    </div>

    <div class="mb-3 row">
        <label for="Title" class="col-sm-2 col-form-label">Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Title" name="Title">
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Title)</span>
        </div>
    </div>

    <div class="mb-3 row">
        <label for="File" class="col-sm-2 col-form-label">File</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="File" name="File">
            
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>

</form>